<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="ThisPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Modul322_Omda_Maric.ViewModels"
    x:Class="Modul322_Omda_Maric.Views.MainPage"
    Title="SaveUp">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>

        <!-- Produkt-Liste -->
        <CollectionView
      AbsoluteLayout.LayoutBounds="0,0,1,0.9"
      AbsoluteLayout.LayoutFlags="All"
      ItemsSource="{Binding Products}"
      Margin="8">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="8" Margin="4" CornerRadius="8" HasShadow="True">
                        <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto">

                            <Image
                Source="{Binding IconSource}"
                WidthRequest="40"
                HeightRequest="40"
                VerticalOptions="Center" />

                            <Label
                Grid.Column="1"
                Text="{Binding Name}"
                FontAttributes="Bold"
                FontSize="16"
                VerticalOptions="Center" />

                            <Label
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding CreatedAt, StringFormat='Erstellt am {0:dd.MM.yyyy}'}"
                FontSize="12"
                TextColor="#666" />

                            <Label
                Grid.Column="2"
                Text="{Binding Price, StringFormat='{}{0:C}'}"
                FontSize="16"
                VerticalOptions="Center"
                HorizontalOptions="End" />

                            <!-- Trash-Icon wie von dir repariert -->
                            <ImageButton
                Grid.Row="1"
                Grid.Column="2"
                Source="trash.png"
                BackgroundColor="Transparent"
                Command="{Binding Source={x:Reference ThisPage}, Path=BindingContext.DeleteProductCommand}"
                CommandParameter="{Binding .}"
                HorizontalOptions="End"
                WidthRequest="24"
                HeightRequest="24" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Untere Leiste mit TotalSaved -->
        <Grid
      AbsoluteLayout.LayoutBounds="0,0.9,1,0.1"
      AbsoluteLayout.LayoutFlags="All"
      BackgroundColor="White"
      ColumnDefinitions="Auto,*,Auto"
      Padding="12">

            <Label
        Text="Gesamt gespart:"
        FontAttributes="Bold"
        VerticalOptions="Center" />

            <Label
        Grid.Column="1"
        Text="{Binding TotalSaved, StringFormat='{}{0:C}'}"
        FontSize="16"
        VerticalOptions="Center"
        HorizontalOptions="Start" />

            <Button
        Grid.Column="2"
        BackgroundColor="Transparent"
        WidthRequest="32"
        HeightRequest="32"
        Command="{Binding InfoCommand}">
                <Button.ImageSource>
                    <FileImageSource File="info.png" />
                </Button.ImageSource>
            </Button>
        </Grid>

        <!-- Floating + Button -->
        <Button
      AbsoluteLayout.LayoutFlags="PositionProportional"
      AbsoluteLayout.LayoutBounds="0.9,0.9,AutoSize,AutoSize"
      Text="+"
      FontSize="24"
      WidthRequest="56"
      HeightRequest="56"
      CornerRadius="28"
      BackgroundColor="{DynamicResource Primary}"
      TextColor="White"
      Command="{Binding AddProductCommand}" />
    </AbsoluteLayout>
</ContentPage>
